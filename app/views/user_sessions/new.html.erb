<% title "Login" %>

<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %><br />
    <%= f.check_box :remember_me %><%= f.label :remember_me %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>


